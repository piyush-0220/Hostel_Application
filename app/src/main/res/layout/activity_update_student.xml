<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hostel_bg"
    android:orientation="vertical"
    tools:context=".Update_student">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20sp"
        android:background="@color/blur_bg"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:paddingTop="55sp"
            android:paddingHorizontal="55sp"


            android:src="@drawable/splah" />


        <EditText
            android:id="@+id/st_name_updt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:background="@drawable/edt_bg"
            android:drawableStart="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Student name"
            android:padding="12dp"

            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold"


            />


        <EditText
            android:id="@+id/st_phone_updt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:background="@drawable/edt_bg"
            android:drawableTint="@color/black"
            android:drawableStart="@drawable/baseline_local_phone_24"
            android:drawablePadding="8dp"
            android:hint="Phone"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold"


            />

        <EditText
            android:id="@+id/st_hostel_fee_updt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:background="@drawable/edt_bg"
            android:drawableStart="@drawable/baseline_attach_money_24"
            android:drawablePadding="8dp"
            android:hint="Hostel fee"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold"


            />




        <EditText
            android:id="@+id/st_parent_name_updt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:background="@drawable/edt_bg"
            android:drawableStart="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Parent name"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold"


            />



        <EditText
            android:id="@+id/st_parent_phone_updt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:background="@drawable/edt_bg"
            android:drawableTint="@color/black"
            android:drawableStart="@drawable/baseline_local_phone_24"
            android:drawablePadding="8dp"
            android:hint="Parent phone"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold"


            />


        <EditText
            android:id="@+id/st_address_updt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:background="@drawable/edt_bg"
            android:drawableTint="@color/black"
            android:drawableStart="@drawable/ic_baseline_add_location_alt_24"
            android:drawablePadding="8dp"
            android:hint="Student Address"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold"


            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="50dp"
            >

            <ProgressBar
                android:id="@+id/pd_updt_st"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:visibility="gone"



              />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/st_updt_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:text="Update Student"
                android:background="@drawable/btn_sub"
                android:textColor="@color/white"
                android:textSize="19dp"

                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>