        android:layout_height="match_parent"

        android:layout_marginBottom="-170dp"
        android:scaleType="fitXY"
        android:src="@drawable/hostel_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blur_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="-120dp"
            android:paddingHorizontal="100sp"

            android:paddingTop="55sp"
            android:src="@drawable/splah" />

        <TextView
            android:id="@+id/update_empty_notes"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/room_empty_note"
            android:textAlignment="center"
            android:textColor="@color/text_color_head"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:visibility="gone" />

