                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/room" />

                <TextView

